<script type="text/javascript" src="https://addevent.com/libs/atc/1.6.1/atc.min.js" async defer></script>

<div class="container">
    <div class="row">
        <div class="col-md-5  toppad  pull-right col-md-offset-3">
            <p class="text-info">Profile created on: {{ createdAt }} </p>
        </div>
    </div>
    <div class="mx-auto">
        <div class="border border-info shadow-lg p-3 mb-5 bg-white rounded">
            <div class="row justify-content-center">
                <!-- Image -->
                <img src="{{ imgurl }}" class="rounded-circle ">
            </div>
            <div class="button" style="float:right;">
                <a href="/events/create" class="btn btn-outline-success btn-sm">Create Event</a>
            </div>
            <div class="panel-heading">
                <h3 class="panel-title">{{ username }}</h3>
            </div>
            <panel class="body">
                <div class="row">
                    <div class="col-md-9 col-lg-12">
                        <table class="table table-user-information">
                            <tbody>
                                <tr>
                                    <td>First-name:</td>
                                    <td>{{ firstname }}</td>
                                </tr>
                                <tr>
                                    <td>Last-name:</td>
                                    <td>{{ lastname }}</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </panel>
        </div>
        <br>
        <h3>Your upcoming events:</h3>
        {{#each eventsAttending}}
        <div class="card p-3 mb-2 bg-primary text-black mr-2 ml-2" style="width: 18rem; float: left;">
            <div class="card-body">
                <h5 class="card-title">Event title: {{ dataValues.title }}</h5>
            </div>
            <div style="width: 100%; height: 180px; background-image: url({{dataValues.imgurl}}); background-position: center;     background-position: center;
    background-repeat: no-repeat;
    background-size: cover;"></div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Location: {{dataValues.loaction }}</li>
                <li class="list-group-item">Time: {{ dataValues.time }}</li>
            </ul>
            <div class="card-body">
                <a href="/events/event?id={{dataValues.id}}" class="card-link text-white">View Event</a>
                <div title="Add to Calendar" class="addeventatc mt-3">
                    Add to Calendar
                    <span class="start">{{ dataValues.time }}</span>
                    <span class="end">{{ dataValues.time }}</span>
                    <span class="timezone">America/Los_Angeles</span>
                    <span class="title">{{ dataValues.title }}</span>
                    <span class="description">{{ dataValues.body }}</span>
                    <span class="location">{{ dataValues.location }}</span>
                </div>
            </div>
        </div>
        {{/each}}
        <br>
        <h3 style="clear: both;">Created events:</h3>
        {{#each eventsHosting}}
        <div class="card p-3 mb-2 bg-secondary text-black mr-2 ml-2" style="width: 18rem; float: left;">
            <div class="card-body">
                <h5 class="card-title">Event title: {{ dataValues.title }}</h5>
            </div>
           <div style="width: 100%; height: 180px; background-image: url({{dataValues.imgurl}}); background-position: center;     background-position: center;
    background-repeat: no-repeat;
    background-size: cover;"></div>

            <ul class="list-group list-group-flush">
                <li class="list-group-item">Location: {{dataValues.loaction }}</li>
                <li class="list-group-item">Time: {{ dataValues.time }}</li>
            </ul>
            <div class="card-body">
                <a href="/events/event?id={{dataValues.id}}" class="card-link text-white">View Event</a>
                <div title="Add to Calendar" class="addeventatc mt-3">
                    Add to Calendar
                    <span class="start">{{ dataValues.time }}</span>
                    <span class="end">{{ dataValues.time }}</span>
                    <span class="timezone">America/Los_Angeles</span>
                    <span class="title">{{ dataValues.title }}</span>
                    <span class="description">{{ dataValues.body }}</span>
                    <span class="location">{{ dataValues.location }}</span>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>