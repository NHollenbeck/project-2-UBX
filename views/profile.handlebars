<div class="container">
    <div class="row">
        <div class="col-md-5  toppad  pull-right col-md-offset-3">
            <p class="text-info">Profile created on: {{ createdAt }} </p>
        </div>
    </div>
    <div class="mx-auto">
        <div class="border border-info shadow-lg p-3 mb-5 bg-white rounded">
            <div class="row justify-content-center">
                <!-- Image -->
                <img src="{{ imgurl }}" class="rounded-circle ">
            </div>
            <div class="button" style="float:right;">
                <a href="#" class="btn btn-outline-success btn-sm">Create Event</a>
            </div>
            <div class="panel-heading">
                <h3 class="panel-title">{{ username }}</h3>
            </div>
            <panel class="body">
                <div class="row">
                    <div class="col-md-9 col-lg-12">
                        <table class="table table-user-information">
                            <tbody>
                                <tr>
                                    <td>First-name:</td>
                                    <td>{{ firstname }}</td>
                                </tr>
                                <tr>
                                    <td>Last-name:</td>
                                    <td>{{ lastname }}</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </panel>
        </div>
        <br>
        <h3>Your upcoming events:</h3>
        {{#each eventsAttending}}
        <div class="card p-3 mb-2 bg-primary text-black " style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Event title: {{ dataValues.title }}</h5>
            </div>
            <a href="https://placeholder.com"><img src="https://via.placeholder.com/350x150" class="card-img-top "></a>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Location: {{dataValues.loaction }}</li>
                <li class="list-group-item">Time: {{ dataValues.time }}</li>
            </ul>
            <div class="card-body">
                <a href="/events/event?id={{dataValues.id}}" class="card-link text-white">Card link</a>
            </div>
        </div>
        {{/each}}
        <br>
        <h3>Created events:</h3>
        {{#each eventsHosting}}
        <div class="card p-3 mb-2 bg-secondary text-black" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Event title: {{ dataValues.title }}</h5>
            </div>
            <a href="https://placeholder.com"><img src="https://via.placeholder.com/350x150" class="card-img-top "></a>

            <ul class="list-group list-group-flush">
                <li class="list-group-item">Location: {{dataValues.loaction }}</li>
                <li class="list-group-item">Time: {{ dataValues.time }}</li>
            </ul>
            <div class="card-body">
                <a href="/events/event?id={{dataValues.id}}" class="card-link text-white">Card link</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>





