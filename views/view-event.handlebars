<script type="text/javascript" src="https://addevent.com/libs/atc/1.6.1/atc.min.js" async defer></script>

</head>
<div class="container">
  <div class="row" style="margin-top: 50px;">
    <div class="col-sm-3 text-center">
      <h3>Host Information
      </h3>
      <img style="border-radius: 50%; margin: 30px 0px;" src="{{profileImg}}" alt="">
      <h6><strong>Name:</strong> {{ fullName }}</h6>
      <p><small><strong>Member Since:</strong> {{ memberSince }}</small></p>

      {{#if cannotAttend}}
      <a href="#" data-eventID="{{ eventid }}" class="btn btn-success disabled" aria-disabled="true">Attend This Event</a>
      {{else}}
      <a href="/events/attend?id={{eventid}}" class="btn btn-success">Attend This Event</a>
      {{/if}}
      <!-- Button code -->
      <div title="Add to Calendar" class="addeventatc mt-3">
        Add to Calendar
        <span class="start">{{ time }}</span>
        <span class="end">{{ time }}</span>
        <span class="timezone">America/Los_Angeles</span>
        <span class="title">{{title}}</span>
        <span class="description">{{body}}</span>
        <span class="location">{{location}}</span>
      </div>

    </div>
    <div class="col-sm-9">
      <div class="jumbotron text-center" style=" background: url( ../img/bg-pattern.png ), #7b4397;
  background: url(../img/bg-pattern.png), -webkit-linear-gradient(to left, #7b4397, #dc2430);
  background: url(../img/bg-pattern.png), linear-gradient(to left, #7b4397, #dc2430);">
        <h2 style="color: white; font-weight: 700;" class="display-4">{{title}}</h2>
      </div>
      <div class="row">
        <div class="col-sm-4" style="background-image: url({{ imgurl }}); background-position: center;     background-position: center;
    background-repeat: no-repeat;
    background-size: cover;">
          {{!-- <img style="min-width: 100%; width: 100%;" src="https://static.memrise.com/img/400sqf/from/uploads/course_photos/3146044000171223183557.png"
            alt=""> --}}
        </div>
        <div class="col-sm-8">
          <h4><strong>Event Description:</strong></h4>
          <p>
            {{ body }}
          </p>
        </div>
      </div>
      <div class="row" style="margin-top: 60px; background-color: #f5f5f5; padding: 40px;">
        <div class="col-sm-6">
          <h4><strong>Location & Time:</strong></h4>
          <p>Location: {{ location }}</p>
          <p>Time: {{ time }}</p>
        </div>
        <div class="col-sm-6">
          <iframe width="100%" height="100%" style="min-height: 300px;" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?key=AIzaSyB_94Xpuq3RwWXcjTFE09Hv4Im9YDxpmMk
    &q={{ location }}" allowfullscreen></iframe>
        </div>
      </div>
    </div>
  </div>
</div>

