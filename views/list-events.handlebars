<div class="container">
    <div class="row">
        <div class="col-sm-12">
            {{#each events}}
            <div class="card mr-2 ml-2" style="width: 18rem; float: left;">
                <div style="width: 286px; height: 180px; background-image: url({{dataValues.imgurl}}); background-position: center;     background-position: center;
    background-repeat: no-repeat;
    background-size: cover;"></div>
                <div class="card-body">
                    <h5 class="card-title">{{dataValues.title}}</h5>
                    <p class="card-text">Time: {{dataValues.time}}</p>
                    <a href="/events/event?id={{dataValues.id}}" class="btn btn-primary">View Event</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

<script src="app.js"></script>